rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Email subscribers collection - only accessible via service account
    // Client-side access is completely blocked
    match /email_subscribers/{subscriber} {
      allow read: if false;
      allow write: if false;
    }
  }
}